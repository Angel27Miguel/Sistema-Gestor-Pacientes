@model SistemaGestorPacientesApp.Core.Application.ViewModels.Cita.SaveCitaViewModel

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-black">
                    <h3 class="text-white">Detalles de la Cita</h3>
                </div>
                <div class="card-body">
                    <h4>Cita del paciente @Model.NombrePaciente</h4>
                    <hr />
                    <dl class="row">

                        <dt class="col-sm-2">Fecha de Cita</dt>
                        <dd class="col-sm-10">@Model.FechaCita.ToShortDateString()</dd>

                        <dt class="col-sm-2">Hora de Cita</dt>
                        <dd class="col-sm-10">@Model.HoraCita.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-2">Causa</dt>
                        <dd class="col-sm-10">@Model.Causa</dd>

                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">@Model.Estado</dd>

                        <dt class="col-sm-2">Paciente</dt>
                        <dd class="col-sm-10">@Model.NombrePaciente</dd>

                        <dt class="col-sm-2">Médico</dt>
                        <dd class="col-sm-10">@Model.NombreMedico</dd>

                        @if (Model.ConsultorioId.HasValue)
                        {
                            <dt class="col-sm-2">Consultorio</dt>
                            <dd class="col-sm-10">@Model.NombreConsultorio</dd>
                        }
                    </dl>

                    <a asp-action="Index" class="btn btn-warning mt-2">Volver a la lista de citas</a>
                </div>
            </div>
        </div>
    </div>
</div>
