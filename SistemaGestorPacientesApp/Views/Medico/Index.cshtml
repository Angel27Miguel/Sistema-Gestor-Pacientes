@model List<SistemaGestorPacientesApp.Core.Application.ViewModels.Medico.MedicoViewModel>

@{
    ViewData["Title"] = "Lista de Médicos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-black">
                    <h3 class="text-white">Mantenimiento de Médicos</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-3 offset-9 text-end">
                            <a asp-action="Create" class="btn btn-outline-success">Crear nuevo médico</a>
                        </div>
                    </div>

                    <div class="row">
                        @if (Model == null || Model.Count == 0)
                        {
                            <h2>No hay médicos registrados.</h2>
                        }
                        else
                        {
                            @foreach (var medico in Model)
                            {
                                <div class="col-12 col-md-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <img src="@medico.Foto" alt="Foto de @medico.Nombre" class="img-fluid mb-3" style="max-height: 200px; object-fit: cover;" />

                                            <h4>@medico.Nombre @medico.Apellido</h4>
                                            <p class="card-text">
                                                <strong>Correo:</strong> @medico.Correo<br />
                                                <strong>Teléfono:</strong> @medico.Telefono<br />
                                                <strong>Cédula:</strong> @medico.Cedula<br />
                                                <strong>Consultorio:</strong> @medico.NombreConsultorio
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a asp-action="Edit" asp-route-id="@medico.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                                    <a asp-action="Delete" asp-route-id="@medico.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
